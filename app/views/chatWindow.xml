<Alloy>
	<Window id="chatWindow" >
		<View id="navBarView" >
			<Button id="closeButton" class="leftNavButton" >close</Button>
			<View id="titleView">
				<ImageView id="titleImageView" />
				<Label id="titleLabel" />
				<ImageView id="titleTargetImageView" />
			</View>
			<Button id="burnButton" class="rightNavButton" >burn</Button>
		</View>
		<Label id="remainCountToBurn" >100</Label>
		<!-- <View id="chatScreen"> -->
		<View id="chatView" scrollingEnabled ="true">
			<TableView id="chatTableView" bubbleParent="false" >
			</TableView>
			<View id="toolBarView" >
				<TextArea id="chatTextField" textAlign="left" 
					keyboardType="Ti.UI.KEYBOARD_DEFAULT" 
					returnKeyType="Ti.UI.RETURNKEY_DEFAULT" 
					suppressReturn="false" 
					maxLength="1024" />
				<Button id="sendButton" />
			</View>
		</View>

	</Window>
</Alloy>